;; -*- scheme -*-

(define libiconv
  (if (or (eq? 'macosx (software-version))
          (eq? 'unknown (software-version)))
      '(-liconv)
      '()))

(compile -s -O2 -d0 -j iconv iconv.scm ,@libiconv)
(compile -s -O2 -d0 iconv.import.scm)

(install-extension
 'iconv
 '("iconv.so" "iconv.import.so" "iconv.html")
 '((version 1.6)
   (documentation "iconv.html")))
